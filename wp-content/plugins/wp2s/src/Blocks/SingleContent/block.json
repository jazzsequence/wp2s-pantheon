{
    "$schema": "https://app.blockstudio.dev/schema",
    "name": "wp2s/single-content",
    "title": "Single Content",
    "category": "text",
    "icon": "star-filled",
    "description": "",
    "__experimental": true,
    "ancestor": [
        "wp2s/single"
    ],
    "supports": {
        "className": false,
        "customClassName": true,
        "align": [
            "full",
            "wide"
        ],
        "renaming": true,
        "color": {
            "background": true,
            "text": true
        }
    },
    "attributes": {
        "align": {
            "type": "string",
            "default": "full"
        }
    },
    "blockstudio": {
        "attributes": [
            {
                "id": "layout",
                "type": "select",
                "label": "Layout",
                "default": 1,
                "fallback": 1,
                "options": [
                    {
                        "value": "1",
                        "label": "One",
                        "innerBlocks": [
                            {
                                "name": "core/group",
                                "innerBlocks": [
                                    {
                                        "name": "wp2s/article"
                                    }
                                ]
                            }
                        ]
                    }
                ],
                "allowNull": "Select Layout"
            }
        ]
    }
}