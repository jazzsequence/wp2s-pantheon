{
    "$schema": "https://app.blockstudio.dev/schema",
    "name": "wp2s/padded-text",
    "title": "Padded Text",
    "category": "text",
    "icon": "star-filled",
    "description": "",
    "supports": {
        "className": false,
        "customClassName": true,
        "renaming": true,
        "color": {
            "background": true,
            "text": true
        },
        "spacing": {
            "padding": true,
            "margin": true
        },
        "shadow": true,
        "typography": {
            "fontSize": true,
            "lineHeight": true,
            "textAlign": true
        }
    },
    "blockstudio": {
        "attributes": [
            {
                "type": "textarea",
                "id": "text",
                "rows": 4
            },
            {
                "type": "select",
                "label": "Tag",
                "id": "tag",
                "fallback": "div",
                "default": "div",
                "options": [
                    {
                        "label": "H1",
                        "value": "h1"
                    },
                    {
                        "label": "H2",
                        "value": "h2"
                    },
                    {
                        "label": "H3",
                        "value": "h3"
                    },
                    {
                        "label": "H4",
                        "value": "h4"
                    },
                    {
                        "label": "H5",
                        "value": "h5"
                    },
                    {
                        "label": "H6",
                        "value": "h6"
                    },
                    {
                        "label": "P",
                        "value": "p"
                    },
                    {
                        "label": "DIV",
                        "value": "div"
                    },
                    {
                        "label": "SPAN",
                        "value": "span"
                    }
                ]
            }
        ]
    }
}